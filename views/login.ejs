<div ng-controller="loginController">
    <div class="container">
        <h2 class="form-signin-heading">Login to {{appName}}</h2>
        <label for="username" class="sr-only">Username</label>
        <input type="text" ng-model="user.username" class="form-control input-sm" placeholder="Username" required autofocus>
        <label for="password" class="sr-only">Password</label>
        <input type="password" id="password" class="form-control input-sm" ng-model="user.password" placeholder="Password"
               required>
        <button class="btn btn-primary btn-block btn-default" ng-click="loginUser(user)">Sign in</button>
    </div>
</div>